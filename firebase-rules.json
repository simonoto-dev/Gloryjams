{
  "rules": {
    "jams": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.email != null"
    },
    "checkins": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "profiles": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "hosts": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.email != null"
    },
    "ghosts": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.email != null"
    },
    "feed": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "sets": {
      ".read": "auth != null",
      ".write": "auth != null && auth.token.email != null"
    },
    "submissions": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["editToken", "status"]
    },
    "subscribers": {
      ".read": "auth != null && auth.token.email != null",
      ".write": "auth != null",
      "$phone": {
        ".validate": "newData.hasChild('phone') && newData.hasChild('created')"
      }
    },
    "blasts": {
      ".read": "auth != null && auth.token.email != null",
      ".write": "auth != null && auth.token.email != null"
    },
    "messages": {
      ".read": "auth != null && auth.token.email != null",
      ".write": "auth != null",
      ".indexOn": ["read", "timestamp"]
    },
    "$other": {
      ".read": false,
      ".write": false
    }
  }
}
